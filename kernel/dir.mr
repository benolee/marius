import os.dir

class Dir
  def initialize(path)
    @os = dir::Dir.new path
  end

  def read
    @os.read
  end

  def tell
    @os.tell
  end

  alias_method %tell, %pos

  def seek(pos)
    @os.seek pos
  end

  alias_method %seek, %pos=

  def each(b)
    while x = @os.read
      b(x)
    end
  end
end

