import testunit

class StringTest < testunit::TestCase
  def test_bytesize
    assert_equal "blah".bytesize, 4
  end

  def test_size
    assert_equal "blah".size, 4
  end

  def test_utf_bytesize
    assert_equal "®".bytesize, 2
  end

  def test_utf_size
    assert_equal "®".size, 1
  end

  def test_prefix?
    assert "blah".prefix?("b")
    refute "blah".prefix?("l")
  end

  def test_equal
    assert "blah" == "blah"
    refute "blah" == "foo"
  end
end
